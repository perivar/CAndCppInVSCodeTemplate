{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & debug file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                // "-v",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
                "-lgcrypt",
                "-lgpg-error"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build & run file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
                "-lgcrypt",
                "-lgpg-error"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}